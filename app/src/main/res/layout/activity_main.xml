<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lí công việc hàng tuần"
        android:gravity="center"
        android:textSize="20sp"
        android:background="#008000"
        android:textColor="#ffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_cviec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Công việc: "
            android:textSize="20sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edt_cviec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_ndung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nội dung: "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edt_ndung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_ngayht"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày HT:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_ngay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4/10/2018"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_gioht"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giờ HT: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_gio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10:08 PM"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_house"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="time"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm CV"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_dscv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách côg việc:"
        android:textSize="20sp"
        android:background="#008000"
        android:textColor="#ffff"/>

    <ListView
        android:id="@+id/lv_ds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>